/* Imports */
@import url('https://fonts.googleapis.com/css2?family=Nova+Square&family=Nunito+Sans:opsz,wght@6..12,200&family=Ubuntu&display=swap');


/* Formatting */

body {
    font-family: 'Ubuntu', sans-serif;
}
a {
    text-decoration: none;
    transition: transform .5s ease-in-out;
}
a:visited {
    color: black;
}

a:hover {
    transform: scale(1.1);
}

h1 {
    font-size: 70px;
}
h2 {
    font-size: 40px;
}

.footer {
    background-color: #50BBE9;
    border-top: 2px solid #E10A17;
    border-bottom: 2px solid #0399D3;
    padding: 1rem;
    
}

.navbar {
    padding: 1rem;
    background-color: #50BBE9;
    border-bottom: 2px solid #E10A17;
}


.img_col_limit {
    height: 275px;
    width: 300px;
    margin: 2px;
    padding: 2px;  
}

.img_col_limit>img {
    width: 100%;
    height: 100%;
}

.img_col_limit_350_200 {
    height: 350px;
    width: 200px;
}
.img_col_limit_350_200>img {
    width: 100%;
    height: 100%;
}

.img_col_limit_test {
    height: 600px;
}

.img_col_limit_test>img {
    width: 100%;
    height: 100%;
}


.row_margin {
    margin-bottom: 2rem;
    margin-top: 2rem;
}
.centered {
    text-align: center;
}

.margin_left {
    margin-left: 3rem;
}

.margin_top {
    margin-top: 3rem;
}
.margin_top_sm {
    margin-top: 1rem;
}

.margin_bottom {
    margin-bottom: 3rem;
}
.margin_bottom_sm {
    margin-bottom: 1rem;
}
.aligned_right {
    text-align: right;
}

.test_scale {
    transition: transform .5s ease-in-out;
}

h2.test_scale:hover {
    transform: scale(1.1);
}

.img_col {
    height: 640px;
    margin: 2px;
    padding: 2px;
}

.img_col>img {
    width: 100%;
    height: 100%;
}

.centered {
    text-align: center;
}

.button {
    outline: none;
    display: inline-block;
    background-color: #50BBE9; 
    border: 3px solid #0399D3;
    border-radius: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 20px;
    padding-right: 20px;
    color: whitesmoke;
    
}


.button_1 {
    border-radius: 6px;
    display: inline-block;
    outline: 0;
    border: 0;
    font-size: 15px;
    text-decoration: none;
    line-height: 1;
    position: relative;
    padding: 10px;
    background: #1abebf;
    background-image: linear-gradient(122deg,#8ae8ff,#ff5555);
    background-size: 300px,300px,100%;
    color: #000000;
    /*
    border-bottom: 5px solid #00bbff; */
    box-shadow: 0 0 3px 3px rgb(0 0 0 / 5%);
    text-shadow: 0 0 3px rgb(0 0 0 / 30%);
    transition: all .3s;
    :hover{
        box-shadow: 0 0 3px 3px rgb(0 0 0 / 8%);
    }
    
}

.button_2 {
    border-radius: 6px;
    display: inline-block;
    outline: 0;
    border: 0;
    cursor: pointer;
    font-size: 15px;
    text-decoration: none;
    line-height: 1;
    position: relative;
    padding: 10px;
    background: #1abebf;
    background-image: linear-gradient(122deg,#ff5555, #8ae8ff);
    background-size: 300px,300px,100%;
    color: #000000;
    /*
    border-bottom: 5px solid #00bbff; */
    box-shadow: 0 0 3px 3px rgb(0 0 0 / 5%);
    text-shadow: 0 0 3px rgb(0 0 0 / 30%);
    transition: all .3s;
    :hover{
        box-shadow: 0 0 3px 3px rgb(0 0 0 / 8%);
    }
    
}

.button_3 {
    border-radius: 6px;
    display: inline-block;
    outline: 0;
    border: 0;
    cursor: pointer;
    font-size: 15px;
    text-decoration: none;
    line-height: 1;
    position: relative;
    padding: 10px;
    background: #505050;
    background-image: linear-gradient(122deg,#00000080, #ffffff);
    background-size: 300px,300px,100%;
    color: white;
    /*
    border-bottom: 5px solid #00bbff; */
    box-shadow: 0 0 3px 3px rgb(0 0 0 / 5%);
    text-shadow: 0 0 3px rgb(0 0 0 / 30%);
    transition: all .3s;
    :hover{
        box-shadow: 0 0 3px 3px rgb(0 0 0 / 8%);
    }
    
}

hr {
    border: 2px solid black;
    border-radius: 6px;
}

/* Responsive Media Queries */
@media only screen and (max-width: 414px) {
    #body_h2 {
        text-align: center;
    }
    #body_text {
        text-align: center;
    }

    #body_img {
        display: none;
    }
}
@media only screen and (max-width: 810px) {
    .main-section {
        display: none;
    }    
}
@media only screen and (min-width: 811px) and (max-width: 1028px) {
    #cra_logo {
        display: none;
    }
    #main_title {
        padding: 5rem;
    }
}